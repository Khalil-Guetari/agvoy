{% extends 'base.html.twig' %}

{% block body %}
	<h1>Liste des circuits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Pays Depart</th>
                <th>Ville Depart</th>
                <th>Ville Arrivee</th>
                <th>Duree Circuit</th>
                <th>Etapes</th>
            </tr>
        </thead>
        <tbody>
        {{ dump(circuits) }}
        {% for circuit in circuits %}
            <tr>
                <td>{{ circuit.id }}</td>
                <td>{{ circuit.description }}</td>
                <td>{{ circuit.paysDepart }}</td>
                <td>{{ circuit.villeDepart }}</td>
                <td>{{ circuit.villeArrivee }}</td>
                <td>{{ circuit.dureeCircuit }}</td>
                <td>
                	<a href="{{ path('front_circuit_show', {id: circuit.id}) }}">d√©tails</a>
                </td>
                {#<td>{{ circuit.etapes }}</td>#}
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no circuits found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
